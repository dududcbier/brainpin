<p id="notice"><%= notice %></p>

<h1>Study Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>Student</th>
      <th>Subtopic</th>
      <th>End date</th>
      <th>Num correct</th>
      <th>Num questions</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_sessions.each do |study_session| %>
      <tr>
        <td><%= study_session.start_date %></td>
        <td><%= study_session.student %></td>
        <td><%= study_session.subtopic %></td>
        <td><%= study_session.end_date %></td>
        <td><%= study_session.num_correct %></td>
        <td><%= study_session.num_questions %></td>
        <% if study_session.end_date.nil? %>
         <td><%= link_to 'Study', study_session %></td>
        <% end %>
        <td><%= link_to 'Destroy', study_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

