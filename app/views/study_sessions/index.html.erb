<p id="notice"><%= notice %></p>

<h1>Study Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>Id student</th>
      <th>Id subtopic</th>
      <th>End date</th>
      <th>Num correct</th>
      <th>Num questions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_sessions.each do |study_session| %>
      <tr>
        <td><%= study_session.start_date %></td>
        <td><%= study_session.id_student %></td>
        <td><%= study_session.id_subtopic %></td>
        <td><%= study_session.end_date %></td>
        <td><%= study_session.num_correct %></td>
        <td><%= study_session.num_questions %></td>
        <td><%= link_to 'Show', study_session %></td>
        <td><%= link_to 'Edit', edit_study_session_path(study_session) %></td>
        <td><%= link_to 'Destroy', study_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

