<h1>Brainpin</h1>
<p>
  This is the home page for the
  <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
  sample application.
</p>

<% if logged_in? %>
	<%= form_for @post, url: {action: "create_post"} do |post_form| %>
		<%= post_form.text_area :text, cols: 150, rows: 8 %>
		<%= post_form.submit %>
	<% end %>

	<table>
	  <thead>
	    <tr>
	      <th>User</th>
	      <th>Text</th>
	      <th colspan="2"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @posts.each do |post| %>
	      <tr>
	      	<td><%= post.created_by %></td>
	        <td><%= post.text %></td>
	        <% if current_user.id.to_i == post.created_by.to_i %>
	        	<td><%= link_to 'Edit', edit_post_path(post) %></td>
	        	<td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	        <% end %>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% end %>