    <%= user_form.label :phone %>
    <%= user_form.text_field :phone %>
    <%= user_form.label :cpf %>
    <%= user_form.text_field :cpf %>
    <%= user_form.label :email %>
    <%= user_form.text_field :email %>
  <% end %>

  <div class="field">
    <%= form.label :interest %>
    <%= form.text_field :interest %>
  </div>

  <div class="field">
    <%= form.label :school_year %>
    <%= form.number_field :school_year %>
  </div>

  <div class="field">
    <%= form.label :birth_date %>
    <%= form.date_select :birth_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
