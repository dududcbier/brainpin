<p id="notice"><%= notice %></p>

<h1>Materials</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Subtopic</th>
      <th>Description</th>
      <th>Url</th>
      <th>File</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.teacher %></td>
        <td><%= material.subtopic %></td>
        <td><%= material.description %></td>
        <td><%= material.url %></td>
        <td><%= material.file %></td>
        <td><%= material.rating %></td>
        <td><%= link_to 'Show', material %></td>
        <% if is_teacher? %>
          <td><%= link_to 'Edit', edit_material_path(material) %></td>
          <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if is_teacher? %>
  <%= link_to 'New Material', new_material_path %>
<% end %>