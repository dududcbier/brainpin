<p id="notice"><%= notice %></p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<p>
  <strong>Comments:</strong>
  <%= render @post.comments %>
</p>

<%= form_for @comment, url: {action: "comment"} do |post_form| %>
	<%= post_form.text_area :text, cols: 150, rows: 8 %>
	<%= post_form.hidden_field :post_id, value: @post.id %>
	<%= post_form.submit %>
<% end %>

<%= link_to 'Back', :back %>
