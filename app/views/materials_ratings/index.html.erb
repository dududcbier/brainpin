<p id="notice"><%= notice %></p>

<h1>Materials Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Material</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials_ratings.each do |materials_rating| %>
      <tr>
        <td><%= materials_rating.student %></td>
        <td><%= materials_rating.material %></td>
        <td><%= materials_rating.rating %></td>
        <td><%= link_to 'Show', materials_rating %></td>
        <td><%= link_to 'Edit', edit_materials_rating_path(materials_rating) %></td>
        <td><%= link_to 'Destroy', materials_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

